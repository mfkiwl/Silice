{
  "name": "icebreaker",
  "variants": [
    {
      "name"      : "configurable",
      "framework" : "icebitsy.v",
      "pins"      : [
        {"set"    : "basic"},
        {"set"    : "buttons", "define" : "BUTTONS=1"},
        {"set"    : "uart", "define" : "UART=1"},
        {"set"    : "vga", "define" : "VGA=1"},
        {"set"    : "pmod", "define" : "PMOD=1"},
        {"set"    : "spiflash", "define" : "SPIFLASH=1"},
        {"set"    : "qspiflash", "define" : "QSPIFLASH=1"}
      ],
      "builders": [
        {
          "builder" : "edalize",
          "description": "Build using Edalize",
          "tool": "icestorm",
          "tool_options": [
            {
                "yosys_synth_options": ["-dsp","-abc9","-device u"],
                "nextpnr_options": ["--up5k", "--freq 12", "--package sg48", "--timing-allow-fail"],
                "pnr": "next"
            }
          ],
          "bitstream"  : "build.bin",
          "constraints": [{"name": "icebitsy.pcf", "file_type": "PCF"}],
          "program": [
            {"cmd" : "cp", "args" : "build.bin build.dfu"},
            {"cmd" : "dfu-suffix", "args" : "-v 0006 -p 1d50 -a build.dfu"},
            {"cmd" : "dfu-util", "args" : "-a 0 -D build.dfu"}
          ]
        }
      ]
    }
  ],
  "pins": {
    "basic": [
        {
          "name": "leds",
          "type": "uint5",
          "io": "output"
        }
    ],
    "buttons": [
      {
        "name": "btns",
        "type": "uint3",
        "io": "input"
      }
    ],
    "uart": [
      {
        "name": "uart_tx",
        "type": "uint1",
        "io"  : "output"
      },
      {
        "name": "uart_rx",
        "type": "uint1",
        "io"  : "input"
      }
    ],
    "vga": [
      {
        "name": "vga_hs",
        "type": "uint1",
        "io": "output"
      },
      {
        "name": "vga_vs",
        "type": "uint1",
        "io": "output"
      },
      {
        "name": "vga_r",
        "type": "uint6",
        "io": "output"
      },
      {
        "name": "vga_g",
        "type": "uint6",
        "io": "output"
      },
      {
        "name": "vga_b",
        "type": "uint6",
        "io": "output"
      }
    ],
    "pmod": [
      {
        "name": "pmod",
        "type": "uint8",
        "io"  : "input_output"
      }
    ],
    "spiflash": [
      {
        "name" : "sf_clk",
        "type" : "uint1",
        "io"   : "output"
      },
      {
        "name" : "sf_csn",
        "type" : "uint1",
        "io"   : "output"
      },
      {
        "name" : "sf_mosi",
        "type" : "uint1",
        "io"   : "output"
      },
      {
        "name" : "sf_miso",
        "type" : "uint1",
        "io"   : "input"
      }
    ],
    "qspiflash": [
      {
        "name" : "sf_clk",
        "type" : "uint1",
        "io"   : "output"
      },
      {
        "name" : "sf_csn",
        "type" : "uint1",
        "io"   : "output"
      },
      {
        "name" : "sf_io0",
        "type" : "uint1",
        "io"   : "input_output"
      },
      {
        "name" : "sf_io1",
        "type" : "uint1",
        "io"   : "input_output"
      },
      {
        "name" : "sf_io2",
        "type" : "uint1",
        "io"   : "input_output"
      },
      {
        "name" : "sf_io3",
        "type" : "uint1",
        "io"   : "input_output"
      }
    ]
  }
}
