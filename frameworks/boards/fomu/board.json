{
  "name": "fomu",
  "variants": [
    {
      "name"      : "pvt1",
      "framework" : "fomu.v",
      "pins"      : [ 
        {"set"    : "basic"},
        {"set"    : "usb",  "define" : "USB=1"},
        {"set"    : "pads", "define" : "PADS=1"},
        {"set"    : "spiflash", "define" : "SPIFLASH=1"},
        {"set"    : "oled", "define" : "OLED=1"}
      ],
      "builders": [
        {
          "builder" : "shell",
          "command" : "fomu-pvt1.sh",
          "description": "Custom shell scripts using yosys and nextpnr"
        }
      ]    
    },
    {
      "name"      : "hacker",
      "framework" : "fomu.v",
      "pins"      : [ 
        {"set"    : "basic"},
        {"set"    : "usb",  "define" : "USB=1"},
        {"set"    : "spiflash",  "define" : "SPIFLASH=1"},
        {"set"    : "pads", "define" : "PADS=1"},
        {"set"    : "oled", "define" : "OLED=1"}
      ],
      "builders": [
        {
          "builder" : "shell",
          "command" : "fomu-hacker.sh",
          "description": "Custom shell scripts using yosys and nextpnr"
        }
      ]    
    }
  ],
  "pins": {
    "basic": [
        {
          "name": "leds",
          "type": "uint3",
          "io": "output"
        }
    ],
    "usb": [
      {
        "name": "usb_dp",
        "type": "uint1",
        "io": "output"
      },
      {
        "name": "usb_dn",
        "type": "uint1",
        "io": "output"
      },
      {
        "name": "usb_dp_pu",
        "type": "uint1",
        "io": "output"
      }
    ],
    "spiflash": [
      {
        "name": "sf_mosi",
        "type": "uint1",
        "io": "output"
      },
      {
        "name": "sf_miso",
        "type": "uint1",
        "io": "input"
      },
      {
        "name": "sf_clk",
        "type": "uint1",
        "io": "output"
      },      
      {
        "name": "sf_csn",
        "type": "uint1",
        "io": "output"
      }
    ],
    "oled": [
      {
        "name": "oled_clk",
        "type": "uint1",
        "io": "output"
      },
      {
        "name": "oled_mosi",
        "type": "uint1",
        "io": "output"
      },
      {
        "name": "oled_csn",
        "type": "uint1",
        "io": "output"
      },
      {
        "name": "oled_resn",
        "type": "uint1",
        "io": "output"
      },
      {
        "name": "oled_dc",
        "type": "uint1",
        "io": "output"
      }
    ],
    "pads": [
      {
        "name": "user_pads",
        "type": "uint4",
        "io": "input"
      }
    ]
  }
}
